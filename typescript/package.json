{
  "name": "study",
  "version": "1.0.0",
  "description": "A repository for practice programming problems and their solutions.",
  "repository": "https://github.com/dreadwail/study",
  "author": "Dreadwail",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "run-s eslint prettier",
    "eslint": "eslint .",
    "prettier": "prettier --check .",
    "test": "node --max-old-space-size=16384 ./node_modules/.bin/jest jest",
    "test:watch": "node --max-old-space-size=16384 ./node_modules/.bin/jest --watch"
  },
  "dependencies": {
    "typescript": "4.1.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "husky": "4.2.5",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "ts-jest": "26.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s build lint"
    }
  }
}
